@model IEnumerable<Post>

@{

}

<div class="main-img">
    <div class="title">Amazing Blog Site</div>
</div>

<div class="container">
    @foreach (var post in Model)
    {
        var imagePath = $"/Image/{post.Image}";
        <a class="post"
           asp-controller="Home"
           asp-action="Post"
           asp-route-id="@post.Id">
            <img src="@imagePath" />
            <span class="title">@post.Title</span>
        </a>
    }
</div>