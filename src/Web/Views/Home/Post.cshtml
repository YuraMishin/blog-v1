@model Post

@{}

<div class="container">
    <div class="post">
        @if (!String.IsNullOrEmpty(Model.Image))
        {
            var imagePath = $"/Image/{Model.Image}";
            <img src="@imagePath" />
            <span class="title">@Model.Title</span>
        }
    </div>
    <div class="post-body">
        @Model.Body
    </div>
</div>
