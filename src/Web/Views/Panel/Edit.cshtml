@model PostViewModel

@{

}
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<div>
    <form method="post"
          asp-controller="Panel"
          asp-action="Edit"
          enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title" />
        </div>
        <div>
            <label asp-for="Body"></label>
            <textarea id="editor" asp-for="Body"></textarea>
        </div>
        <div>
            <label asp-for="Image"></label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image" />
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>$('#editor').trumbowyg();</script>
}